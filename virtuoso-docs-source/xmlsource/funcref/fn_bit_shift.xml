      <refsect1 xml:id="examples_bit_shift">
        <title>Examples
</title>
        <example xml:id="ex_bit_shift">
          <title>Bitwise-shifting
</title>
          <screen>
select bit_shift (18, 6);
1152

select bit_shift (-18, 6);
-1152

select bit_shift (1152, -6);
18

select bit_shift (-1152, -6);
-18
</screen>
        </example>
