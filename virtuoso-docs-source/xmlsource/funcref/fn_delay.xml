      <refsect1 xml:id="examples_delay">
        <title>Examples
</title>
        <example xml:id="ex_delay">
          <title>Simple example
</title>
          <screen>
create procedure
waitsome (in _interval integer)
{
  delay (_interval);
}

SQL&gt; waitsome (10);

Done. -- 10004 msec.

</screen>
