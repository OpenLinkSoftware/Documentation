<?xml version="1.0" encoding="UTF-8"?>
<refentry xmlns:xlink="http://www.w3.org/1999/xlink" xmlns="http://docbook.org/ns/docbook" xml:id="fn_delay">
      <refmeta>
        <refentrytitle>delay
</refentrytitle>
        <refmiscinfo>sql
</refmiscinfo>
      </refmeta>
      <refnamediv>
        <refname>delay
</refname>
        <refpurpose>sleep for n seconds
</refpurpose>
      </refnamediv>
      <refsynopsisdiv>
        <funcsynopsis xml:id="fsyn_delay">
          <funcprototype xml:id="fproto_delay">
            <funcdef>
              <function>delay
</function>
            </funcdef>
            <paramdef choice="opt">in 
<parameter>n_seconds
</parameter>

   integer
</paramdef>
          </funcprototype>
        </funcsynopsis>
      </refsynopsisdiv>
      <refsect1 xml:id="desc_delay">
        <title>Description
</title>
        <para>This will halt calling procedure execution for specified
    interval in seconds.
</para>
      </refsect1>
      <refsect1 xml:id="params_delay">
        <title>Parameters
</title>
        <refsect2>
          <title>n_seconds
</title>
          <para><type>INTEGER
</type>

   number of seconds to sleep.
</para>
        </refsect2>
      </refsect1>
      <refsect1 xml:id="ret_delay">
        <title>Return Types
</title>
        <para>None
</para>
      </refsect1>
