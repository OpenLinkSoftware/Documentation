      <refsect1 xml:id="examples_serv_queue_top">
        <title>Examples
</title>
        <example xml:id="ex_serv_queue_top">
          <title>Retrieve External Sites
</title>
          <programlisting>
WS.WS.SERV_QUEUE_TOP (
  'www.foo.com', 'sites/www_foo_com', 0, 0, 'DB.DBA.my_hook',
    vector ('www.skip.me','www.bar.com')
);
</programlisting>
