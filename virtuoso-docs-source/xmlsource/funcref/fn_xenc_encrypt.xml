        <refname>xenc_encrypt
</refname>
        <refpurpose>Encrypt and optionally sign a SOAP message
</refpurpose>
      </refnamediv>
      <refsynopsisdiv>
        <funcsynopsis xml:id="fsyn_xenc_encrypt">
          <funcprototype xml:id="fproto_xenc_encrypt">
