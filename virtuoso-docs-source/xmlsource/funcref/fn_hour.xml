      <refnamediv>
        <refname>hour
</refname>
        <refpurpose>get hour from a datetime
</refpurpose>
      </refnamediv>
      <refsynopsisdiv>
        <funcsynopsis xml:id="fsyn_hour_01">
          <funcprototype xml:id="fproto_hour_01">
            <funcdef>
              <function>hour
</function>
            </funcdef>
            <paramdef choice="opt">in 
<parameter>dt
</parameter>

   datetime
</paramdef>
          </funcprototype>
        </funcsynopsis>
      </refsynopsisdiv>
      <refsect1 xml:id="desc_hour">
        <title>Description
</title>
        <para><function>hour
</function>

   takes a 
<type>datetime
</type>

   and returns
    an 
<type>integer
</type>

   containing a number representing the hour of the datetime.
</para>
      </refsect1>
      <refsect1 xml:id="params_hour">
        <title>Parameters
</title>
        <refsect2>
          <title>dt
</title>
          <para>A 
<type>datetime
</type>

  .
</para>
        </refsect2>
      </refsect1>
      <refsect1 xml:id="ret_hour">
        <title>Return Values
</title>
        <para>An 
<type>INTEGER
</type>

   containing the hour.
</para>
      </refsect1>
