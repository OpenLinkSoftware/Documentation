      <refnamediv>
        <refname>http_acl_set
</refname>
        <refpurpose>Set conditions against web server ACL's
</refpurpose>
      </refnamediv>
      <refsynopsisdiv>
        <funcsynopsis xml:id="fsyn_http_acl_set">
          <funcprototype xml:id="fproto_http_acl_set">
            <funcdef>integer 
<function>http_acl_set
</function>

</funcdef>
            <paramdef choice="opt">in 
<parameter>list_name
</parameter>

   varchar
</paramdef>
            <paramdef choice="opt">in 
<parameter>order
</parameter>

   integer
</paramdef>
            <paramdef choice="opt">in 
<parameter>client_ip
</parameter>

   varchar
</paramdef>
            <paramdef choice="opt">in 
<parameter>flag
</parameter>

   integer
</paramdef>
            <paramdef choice="opt">in 
<parameter>destination_ip_or_host
</parameter>

   varchar
</paramdef>
            <paramdef choice="opt">in 
<parameter>object_id
</parameter>

   integer
</paramdef>
            <paramdef choice="opt">in 
<parameter>read_write_flag
</parameter>

   integer
</paramdef>
            <paramdef choice="opt">in 
