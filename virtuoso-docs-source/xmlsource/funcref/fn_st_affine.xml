</refentrytitle>
        <refmiscinfo>geo
</refmiscinfo>
      </refmeta>
      <refnamediv>
        <refname>ST_Affine
</refname>
        <refpurpose>performs standard 2d affine transformation
</refpurpose>
      </refnamediv>
      <refsynopsisdiv>
        <funcsynopsis xml:id="fsyn_st_affine">
          <funcprototype xml:id="fproto_st_affine">
            <funcdef>
              <function>ST_Affine
</function>
            </funcdef>
            <paramdef choice="opt">in 
<parameter>XXa
</parameter>

   any
</paramdef>
            <paramdef choice="opt">in 
<parameter>XYb
</parameter>

   any
</paramdef>
            <paramdef choice="opt">in 
<parameter>YYe
</parameter>

   any
</paramdef>
            <paramdef choice="opt">in 
<parameter>Xoff
</parameter>

   any
</paramdef>
            <paramdef choice="opt">in 
<parameter>Yoff
</parameter>

   any
</paramdef>
          </funcprototype>
        </funcsynopsis>
      </refsynopsisdiv>
      <refsect1 xml:id="desc_st_affine">
        <title>Description
</title>
        <para>performs standard 2d affine transformation with matrix:
</para>
        <programlisting>
XXa XXb 0
YXd YYe 0
0    0    0
</programlisting>
        <para>and shift (Xoff, Yoff, 0)
</para>
      </refsect1>
      <refsect1 xml:id="params_st_affine">
        <title>Parameters
</title>
        <refsect2>
          <title>XXa
</title>
          <para>matrix a
</para>
        </refsect2>
        <refsect2>
          <title>XYb
</title>
          <para>matrix b
</para>
        </refsect2>
        <refsect2>
          <title>YYe
</title>
          <para>matrix e
</para>
        </refsect2>
        <refsect2>
          <title>Xoff
</title>
          <para>x
</para>
        </refsect2>
        <refsect2>
          <title>Yoff
</title>
          <para>y
</para>
        </refsect2>
      </refsect1>
      <refsect1 xml:id="ret_st_affine">
        <title>Return Types
</title>
        <para>Returns any.
</para>
      </refsect1>
      <refsect1 xml:id="examples_st_affine">
        <title>Examples
</title>
        <example xml:id="ex_st_affine">
          <title>Simple Use
</title>
          <screen>
select st_affine (st_ewkt_read ('POLYGON((1 3,2 4,1 5,0 4,1 3),
                                         (1 3.5,1.5 4,1 4.5,0.5 4,1 3.5))'),
                  30, 3, 1, 0.3, 0.001, 0.002)
VARCHAR NOT NULL
_______________________________________________________________________________

POLYGON((39.001000 1.902000,
         72.001000 3.202000,
         45.001000 2.502000,
         12.001000 1.202000,
         39.001000 1.902000),
        (40.501000 2.052000,
         57.001000 2.702000,
         43.501000 2.352000,
         27.001000 1.702000,
         40.501000 2.052000))
</screen>
        </example>
      </refsect1>
