<?xml version="1.0" encoding="UTF-8"?>
<refentry xmlns:xlink="http://www.w3.org/1999/xlink" xmlns="http://docbook.org/ns/docbook" xml:id="fn_http_path">
      <refmeta>
        <refentrytitle>http_path
</refentrytitle>
        <refmiscinfo>ws
</refmiscinfo>
      </refmeta>
      <refnamediv>
        <refname>http_path
</refname>
        <refpurpose>returns the absolute path to the logical path location of the current http request
</refpurpose>
      </refnamediv>
      <refsynopsisdiv>
        <funcsynopsis xml:id="fsyn_http_path">
          <funcprototype xml:id="fproto_http_path">
            <funcdef>
              <function>http_path
</function>
            </funcdef>
            <paramdef choice="opt"/>
          </funcprototype>
        </funcsynopsis>
      </refsynopsisdiv>
      <refsect1 xml:id="desc_http_path">
        <title>Description
</title>
        <para>
This function returns the absolute path to the logical path location
of current HTTP request.
</para>
      </refsect1>
      <refsect1 xml:id="examples_http_path">
        <title>Examples
</title>
        <example xml:id="ex_http_path">
          <title>Retrieving Current Path of Request
</title>
          <screen>
  &lt;?vsp
    http (sprintf ('&lt;p&gt;The current location is : %s &lt;/p&gt;', http_path ()));
  ?&gt;
  </screen>
        </example>
      </refsect1>
    </refentry>
