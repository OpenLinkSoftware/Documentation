      <refnamediv>
        <refname>ldap_search
</refname>
        <refpurpose>Search in an LDAP server.
</refpurpose>
      </refnamediv>
      <refsynopsisdiv>
        <funcsynopsis xml:id="fsyn_ldap_search">
          <funcprototype xml:id="fproto_ldap_search">
            <funcdef>any 
<function>ldap_search
</function>

</funcdef>
            <paramdef choice="opt">in 
<parameter>server_url 
</parameter>

  varchar
</paramdef>
            <paramdef choice="opt">in 
<parameter>try_tls 
</parameter>

  integer
</paramdef>
            <paramdef choice="opt">in 
<parameter>base 
</parameter>

  varchar
</paramdef>
            <paramdef choice="opt">in 
<parameter>filter 
</parameter>

  varchar
</paramdef>
            <paramdef choice="opt">in 
<parameter>username 
