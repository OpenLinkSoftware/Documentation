      <refnamediv>
        <refname>avg
</refname>
        <refpurpose>Returns average value of all its arguments.
</refpurpose>
      </refnamediv>
      <refsynopsisdiv>
        <funcsynopsis xml:id="xpf_syn_avg">
          <funcprototype xml:id="xpf_proto_avg">
